<!--miniprogram/pages/myCollect/myCollect.wxml-->
<view>丑丑的标题——我的收藏</view>
<!-- 放置动态增加的卡片 -->
<view wx:for="{{markers}}" wx:key="_id">
<i-card title="{{item.title}}" extra="放置评分的地方" thumb="{{item.imgUrl}}" id="{{item.id}}">
    <view slot="content">{{item.marker_msg}}</view>
    <view slot="footer">摊主：{{item.user_name}} 联系方式：{{item.marker_phone}}
      <i-button bind:click="getCollections" type="success" shape="circle" size="small">显示店铺位置</i-button>
      <i-button bind:click="handleClick" type="success" shape="circle" size="small">取消收藏</i-button>
    </view>
</i-card>
</view>
